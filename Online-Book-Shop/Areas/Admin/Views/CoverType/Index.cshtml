
@model IEnumerable<ModelsLayer.CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Types</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create a new Cover
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100; margin-top: 2%">
        <thead>
            <tr>
                <th>Cover Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td style="width:30%">@obj.Id</td>
                    <td style="width:40%">@obj.Name</td>
                    <td style="width: 30%">
                        <div>
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"
                            class="btn btn-danger mx-2"> <i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>